{
  "label": "ZoomInfo",
  "name": "zoominfo",
  "apiVersion": "v1",
  "internal": false,
  "configurationType": "GLOBAL",
  "deployment": {
    "profiles": [
      {
        "name": "default",
        "label": "Default",
        "memory": 256,
        "description": "Default configuration"
      }
    ],
    "allowMultipleInstances": false
  },
  "status": "ACTIVE",
  "stores": [
    {"name": "tokens"}
  ],
  "events": [
    {
      "label": "Webhook",
      "name": "webhook",
      "description": "Notifications from ZoomInfo about entities"
    }
  ],
  "functions": [
    {
      "label": "GET",
      "name": "_get"
    },
    {
      "label": "POST",
      "name": "_post"
    },
    {
      "label": "PUT",
      "name": "_put"
    }
  ],
  "scripts": [
    "zoominfo-fn-helpers.js",
    "http-generic-helpers.js"
  ],
  "configuration": [
    {
      "label": "Connection Method",
      "name": "connectionMethod",
      "type": "buttonsGroup",
      "required": true,
      "defaultValue": "userNamePassword",
      "typeOptions": {
        "allowCustom": false,
        "possibleValues":[
          {
            "label":"Password",
            "name":"userNamePassword"
          },
          {
            "label":"Client ID",
            "name":"clientIdPrivateKey"
          }
        ]
      }
    },
    {
      "name": "userName",
      "label": "User Name",
      "type": "text",
      "required": true,
      "visibility": true
    },
    {
      "name": "clientId",
      "label": "Client ID",
      "type": "text",
      "required": "config.connectionMethod == 'clientIdPrivateKey'",
      "visibility": "config.connectionMethod == 'clientIdPrivateKey'" 
    },
    {
      "name": "privateKey",
      "label": "Private Key",
      "type": "text",
      "required": "config.connectionMethod == 'clientIdPrivateKey'",
      "visibility": "config.connectionMethod == 'clientIdPrivateKey'" 
    },
    {
      "label": "Password",
      "name": "password",
      "required": "config.connectionMethod == 'userNamePassword'",
      "visibility": "config.connectionMethod == 'userNamePassword'" 
    }
  ]
}